<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
              xmlns="http://java.sun.com/xml/ns/javaee" 
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <action-listener>
            org.primefaces.application.DialogActionListener
        </action-listener>
        <navigation-handler>
            org.primefaces.application.DialogNavigationHandler
        </navigation-handler>
        <view-handler>
            org.primefaces.application.DialogViewHandler
        </view-handler>
    </application>  
    <converter>
        <converter-id>activeEmployeeConverter</converter-id>
        <converter-class>jm.com.dpbennett.sm.converter.ActiveEmployeeConverter</converter-class>
    </converter>  
    <converter>
        <converter-id>countryConverter</converter-id>
        <converter-class>jm.com.dpbennett.sm.converter.CountryConverter</converter-class>
    </converter>    
    <converter>
        <converter-id>sectorConverter</converter-id>
        <converter-class>jm.com.dpbennett.sm.converter.SectorConverter</converter-class>
    </converter> 
    <converter>
        <converter-id>serviceConverter</converter-id>
        <converter-class>jm.com.dpbennett.sm.converter.ServiceConverter</converter-class>
    </converter> 
    <validator>
        <validator-id>systemOptionValidator</validator-id>
        <validator-class>jm.com.dpbennett.sm.validator.SystemOptionValidator</validator-class>
    </validator>   
    <validator>
        <validator-id>requiredFieldValidator</validator-id>
        <validator-class>jm.com.dpbennett.sm.validator.RequiredFieldValidator</validator-class>
    </validator>
    <validator>
        <validator-id>businessEntityValidator</validator-id>
        <validator-class>jm.com.dpbennett.sm.validator.BusinessEntityValidator</validator-class>
    </validator>  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>adminUserDialog</from-outcome>
            <to-view-id>/admin/adminUserDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>systemOptionDialog</from-outcome>
            <to-view-id>/admin/systemOptionDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>classificationDialog</from-outcome>
            <to-view-id>/admin/classificationDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule> 
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>documentTypeDialog</from-outcome>
            <to-view-id>/admin/documentTypeDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sectorDialog</from-outcome>
            <to-view-id>/admin/sectorDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>serviceDialog</from-outcome>
            <to-view-id>/admin/serviceDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ldapDialog</from-outcome>
            <to-view-id>/admin/ldapDialog.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <lifecycle>
        <phase-listener id="nocache">jm.com.dpbennett.sm.utils.CacheControlPhaseListener</phase-listener>
    </lifecycle>
    
    <managed-bean>
        <managed-bean-name>authentication</managed-bean-name>
        <managed-bean-class>jm.com.dpbennett.sm.Authentication</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>systemManager</managed-bean-name>
        <managed-bean-class>jm.com.dpbennett.sm.managers.SystemManager</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean> 
    
</faces-config>
